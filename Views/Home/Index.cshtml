<div class="typing-container">
    <h1 id="typed-text" class="typing-text"></h1>
</div>

<style>
    .typing-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
        text-align: center;

        background-color: black;
        color: #d4d4d4;
        font-family: 'Courier New', monospace;
        padding: 20px;
        margin-top: 0;
        min-height: 250px;
        font-size: 1.1rem;
        white-space: pre-wrap;
        overflow: hidden;
        width: fit-content;
    }
    }

    .typing-text {
        color: forestgreen;
        font-size: 2rem;
        font-weight: 500;
        font-family: 'Courier New', monospace;
        white-space: pre-wrap;
        animation: typing 3s steps(6,end) forwards,blink 0.7s step-end infinite;
    }

    
    /* Style for .NET word */
    .typed-net {
        font-size: 3rem;
        font-weight: bold;
        color: #03c04a;
        
    }

    .btn-mainpage {
        color: forestgreen;
        Background: black;
    }
</style>

<script>
      
    const fullText = [
        "I'm a ",
        ".NET Developer",
        " with 4 years of experience in designing, developing and deploying scalable solutions."
    ];

    const typedTextElement = document.getElementById("typed-text");

    // Don't re-run animation if already shown before
    if (!sessionStorage.getItem("typingShown")) {
        let i = 0;
        let j = 0;
        let currentText = "";

        function typeNext() {
            if (i < fullText.length) {
                const isNet = (i === 1); // .NET part
                const targetText = fullText[i];

                if (j < targetText.length) {
                    const char = targetText.charAt(j);
                    if (isNet) {
                        // Append .NET letter-by-letter in span
                        if (j === 0) {
                            currentText += `<span class="typed-net">`;
                        }
                        currentText += char;
                        if (j === targetText.length - 1) {
                            currentText += `</span>`;
                        }
                    } else {
                        currentText += char;
                    }

                    typedTextElement.innerHTML = currentText;
                    j++;
                    setTimeout(typeNext, 100); // Speed
                } else {
                    // Move to next segment
                    i++;
                    j = 0;
                    setTimeout(typeNext, 200);
                }
            } else {
                sessionStorage.setItem("typingShown", "true"); // Mark as shown
            }
        }

        window.onload = typeNext;
    } else {
        // If already shown, just display full text
        typedTextElement.innerHTML = `I'm a <span class="typed-net">.NET Developer</span> with 4 years of
        experience in designing, developing and deploying scalable solutions.`;
    }
</script>
